@page
@model ERPSystem.Pages.Companies.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.GeneralManager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.GeneralManager.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyState)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Departments.First().Name)
        </dt>
        <dd class="col-sm-auto" style="overflow-y: auto; max-height: 200px;">
            <table class="table">
                @foreach (var item in Model.Company.Departments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <div class="w-100"></div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Branches.First().Name)
        </dt>
        <dd class="col-sm-auto" style="overflow-y: auto; max-height: 200px;">
            <table class="table">
                @foreach (var item in Model.Company.Branches)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Company.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index"
           asp-route-pageIndex="@Model.PageIndex"
           asp-route-sortOrder="@Model.CurrentSort"
           asp-route-currentFilter="@Model.CurrentFilter">
            Back to List
        </a>
    </form>
</div>
