@page
@model ERPSystem.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.GeneralManager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.GeneralManager.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyState)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Departments.First().Name)
        </dt>
        <dd class="col-sm-auto" style="overflow-y: auto; max-height: 400px;">
            <table class="table-striped">
                <thead style="text-align: center">
                    <tr>
                        <th class="col-sm-auto">#</th>
                        <th class="col-sm-auto">@Html.DisplayNameFor(model => model.DepartmentsList[0].Name)</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                        @foreach (var item in Model.DepartmentsList)
                        {
                            <tr>
                                <td style="text-align: center">@i</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </dd>
        <div class="w-100"></div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Branches.First().Name)
        </dt>
        <dd class="col-sm-auto" style="overflow-y: auto; max-height: 400px;">
            <table class="table-striped">
                <thead style="text-align: center">
                    <tr>
                        <th class="col-sm-auto">#</th>
                        <th class="col-sm-auto">@Html.DisplayNameFor(model => model.BranchesList[0].Name)</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        i = 1;
                        @foreach (var item in Model.BranchesList)
                        {
                            <tr>
                                <td style="text-align: center">@i</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit"
       asp-route-id="@Model.Company.Id"
       asp-route-pageIndex="@Model.PageIndex"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter">
        Edit
    </a> |
    <a asp-page="./Index"
       asp-route-pageIndex="@Model.PageIndex"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter">
        Back to List
    </a>
</div>
