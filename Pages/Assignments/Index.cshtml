@page
@model ERPSystem.Pages.Assignments.IndexModel

@{
    ViewData["Title"] = "Assignments";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Assignments</h1>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            <a asp-page="Create"><i class="fas fa-plus-circle fa-lg mr-1"></i></a>
            <input type="text" name="SearchString" value="@Model.CurrentFilter" placeholder="Find by name" />
            <button type="submit" class="btn btn-default">
                <i class="fa fa-search"></i>
            </button> |
            <a asp-page="./Index" class="btn btn-default"><i class="fas fa-times"></i></a>
        </p>
    </div>
</form>
<table class="table table-responsive text-nowrap  table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.NameSort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Assignment[0].Name)
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.FTESort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Assignment[0].FTE)
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.StartDateSort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Assignment[0].StartDate)
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.EndDateSort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Assignment[0].EndDate)
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.PositionSort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Assignment[0].Position)
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.EmployeeSort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Assignment[0].Employee)
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.StateSort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Assignment[0].AssignmentState)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            @foreach (var item in Model.Assignment)
            {
                <tr style="@(item.AssignmentState == Models.AssignmentState.Inactive? "color:gray;" : "")">
                    <th scope="row">
                        @Model.Assignment.SeqNum[i]
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FTE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssignmentState)
                    </td>
                    <td>
                        <a asp-page="./Edit"
                           asp-route-id="@item.Id"
                           asp-route-pageIndex="@Model.Assignment.PageIndex"
                           asp-route-sortOrder="@Model.CurrentSort"
                           asp-route-currentFilter="@Model.CurrentFilter">
                            <i class="fas fa-pencil-alt fa-lg"></i>
                        </a> |
                        <a asp-page="./Details"
                           asp-route-id="@item.Id"
                           asp-route-pageIndex="@Model.Assignment.PageIndex"
                           asp-route-sortOrder="@Model.CurrentSort"
                           asp-route-currentFilter="@Model.CurrentFilter">
                            <i class="fas fa-eye fa-lg"></i>
                        </a> |
                        <a asp-page="./Delete"
                           asp-route-id="@item.Id"
                           asp-route-pageIndex="@Model.Assignment.PageIndex"
                           asp-route-sortOrder="@Model.CurrentSort"
                           asp-route-currentFilter="@Model.CurrentFilter">
                            <i class="fas fa-trash fa-lg text-danger"></i>
                        </a>
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>
@{
    var prevDisabled = !Model.Assignment.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Assignment.HasNextPage ? "disabled" : "";
}
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="1"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @prevDisabled">
    <i class="fas fa-fast-backward"></i>
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Assignment.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @prevDisabled">
    <i class="fas fa-arrow-alt-circle-left fa-lg"></i>
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Assignment.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @nextDisabled">
    <i class="fas fa-arrow-alt-circle-right fa-lg"></i>
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Assignment.TotalPages)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @nextDisabled">
    <i class="fas fa-fast-forward"></i>
</a>