@page
@model ERPSystem.Pages.Assignments.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].FTE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].AssignmentState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].Worker)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Assignment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FTE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Worker.FullName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
