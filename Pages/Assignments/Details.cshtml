@page
@model ERPSystem.Pages.Assignments.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Assignment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.FTE)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.FTE)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.Position)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Assignment.Position != null)
            {
                <a asp-page="../Positions/Details"
                   asp-route-id="@Model.Assignment.PositionId">
                    @Html.DisplayFor(model => model.Assignment.Position.Name)
                </a>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.Employee)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Assignment.Employee != null)
            {
                <a asp-page="../Employees/Details"
                   asp-route-id="@Model.Assignment.EmployeeId"
                   asp-route-Role="Employee">
                    @Html.DisplayFor(model => model.Assignment.Employee.FullName)
                </a>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.AssignmentState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.AssignmentState)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit"
       asp-route-id="@Model.Assignment.Id"
       asp-route-pageIndex="@Model.PageIndex"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter">
        Edit
    </a> |
    <a asp-page="./Index"
       asp-route-pageIndex="@Model.PageIndex"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter">
        Back to List
    </a>
</div>
