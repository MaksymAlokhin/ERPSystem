@page
@model ERPSystem.Pages.Reports.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Report</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.Assignment)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Report.Assignment != null)
            {
                <a asp-page="../Assignments/Details"
                   asp-route-id="@Model.Report.AssignmentId">
                    @Html.DisplayFor(model => model.Report.Assignment.Name)
                </a>
            }
            else
            {
                @Html.DisplayFor(model => model.Report.Assignment.Name)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.Assignment.Employee)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Report.Assignment != null && Model.Report.Assignment.Employee != null)
            {
                <a asp-page="../Employees/Details"
                   asp-route-id="@Model.Report.Assignment.EmployeeId">
                    @Html.DisplayFor(model => model.Report.Assignment.Employee.FullName)
                </a>
            }
            else
            {
                @Html.DisplayFor(model => model.Report.Assignment.Employee.FullName)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Report.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.Hours)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Report.Hours)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.ReportState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Report.ReportState)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit"
       asp-route-id="@Model.Report.Id"
       asp-route-pageIndex="@Model.PageIndex"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter">
        Edit
    </a> |
    <a asp-page="./Index"
       asp-route-pageIndex="@Model.PageIndex"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter">
        Back to List
    </a>
</div>
