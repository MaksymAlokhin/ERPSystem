@page
@model ERPSystem.Pages.Reports.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Report.Hours" class="control-label"></label>
                <input asp-for="Report.Hours" class="form-control" />
                <span asp-validation-for="Report.Hours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.ReportState" class="control-label"></label>
                <select asp-for="Report.ReportState" class="form-control"></select>
                <span asp-validation-for="Report.ReportState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.AssignmentId" class="control-label"></label>
                <select asp-for="Report.AssignmentId" class ="form-control" asp-items="ViewBag.AssignmentId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
